% Goal & RQ box

% usage: \goal{Descrizione dell'biettivo della tesi.}
\newcommand{\goal}[1]{ %
	\vspace{5pt} %
	\noindent\fcolorbox{black}{blue!05}{%
		\parbox{0.985\linewidth}{% 
			\textbf{\faBullseye\ Our Goal.} #1 %
		}%
	}%
	\vspace{5pt} %
}%

% usage: \rqbox{Numero della Research Question}{Domanda}
\newcommand{\rqbox}[2]{%
	\medskip%
	\noindent\fcolorbox{black}{blue!05}{%
		\parbox{0.985\linewidth}{% 
			\textbf{\faSearch\ RQ$_{#1}$.} \emph{#2} %
		}%
	}%
	\medskip%
}%

% usage: \rqanswer{Numero della Research Question}{Risposta}
\newcommand{\rqanswer}[2]{%
	\medskip%
	\noindent\fcolorbox{black}{blue!05}{%
		\parbox{0.985\linewidth}{% 
			\textbf{\faHandORight\ Answer to RQ$_{#1}$.} #2%
		}%
	}%
	\medskip%
}%

% usage: \finding{Numero del finding}{Testo}
\newcommand{\finding}[2]{ %
	\medskip%
	\noindent\fcolorbox{black}{blue!05}{%
		\parbox{0.985\linewidth}{% 
			\textbf{\faKey\ Finding #1.} #2 %
		}%
	}%
	\medskip%
}%

% usage: \finding{Numero del takeaway message}{Testo}
\newcommand{\takeaway}[2]{ %
	\medskip%
	\noindent\fcolorbox{black}{blue!05}{%
		\parbox{0.985\linewidth}{% 
			\textbf{\faComment\ Take-away Message \##1.} #2 %
		}%
	}%
	\medskip%
}%

