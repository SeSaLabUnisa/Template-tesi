% Commenti personalizzati

% usage: \notabene{sigla}{Testo}{colore}
\newcommand{\notabene}[3]{
	\fbox{\bfseries\sffamily\scriptsize\color{#3}#1}
	{\sf\small$\blacktriangleright${\color{#3}\textit{\textbf{#2}}}$\blacktriangleleft$}
}


\newcommand{\nb}[1]{\notabene{NB}{#1}{red}}

\newcommand{\needcite}{\textcolor{red}{Citazione necessaria}}

\newcommand{\revised}[1]{\textcolor{blue}{#1}}

\newcommand{\feedback}[1]{\textcolor{red}{#1}}

